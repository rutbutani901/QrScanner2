<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape>

            <corners android:radius="@dimen/_8sdp" />
            <solid android:color="@color/noteUnselectedOkColor" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape >

            <corners android:radius="@dimen/_8sdp" />

            <gradient
                android:startColor="?attr/greenGradientStartColor"
                android:endColor="?attr/greenGradientEndColor"
                android:centerY="0.5"
                android:angle="135"
                />

        </shape>
    </item>
</selector>