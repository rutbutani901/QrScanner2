<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/shape_rounded_corners"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cross"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"

        android:src="@drawable/ic_cross_rate"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:layout_gravity="end"

        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/pleaseEnterBarcode"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/roboto_medium"
        android:textAlignment="center"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_14sdp"

        android:inputType="number"
        android:maxLines="1"

        android:hint="456892564981"
        android:textColorHint="@color/greyTextColorAppIntro"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"

        android:padding="@dimen/_10sdp"


        android:fontFamily="@font/roboto_regular"

        android:background="@drawable/shape_rounded_corners"
        android:backgroundTint="@color/notes_dialog_bg"

        android:gravity="top"

        android:layout_marginHorizontal="@dimen/_15sdp"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/ok"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"

        android:paddingHorizontal="@dimen/_60sdp"
        android:paddingVertical="@dimen/_8sdp"

        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_gravity="center"

        android:background="@drawable/gradient_green_rounded_corners_8sdp"

        />
</androidx.appcompat.widget.LinearLayoutCompat>